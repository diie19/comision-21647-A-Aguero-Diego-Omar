<%- include("partials/head")%>

<body>
    <div style="padding: 50px;">
    <div class="card">
        <div class="card-header">
            Editar Publicacion: <%= publicacion.id %>
        </div>
        <div class="card-body">
            <form method="POST">
                <div class="mb-3">
                    <label for="imagen" class="form-label">Imagen</label>
                    <input type="url" class="form-control" id="imagen" name="imagen" value="<%= publicacion.imagen %>">
                </div>
                <div class="mb-3">
                    <label for="titulo" class="form-label">Título</label>
                    <input type="text" class="form-control" id="titulo" name="titulo" value="<%= publicacion.titulo %>">
                </div>
                <div class="mb-3">
                    <label for="descripcion" class="form-label">Descripción</label>
                    <input type="text" class="form-control" id="descripcion" name="descripcion" value="<%= publicacion.descripcion %>">
                </div>
            
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
        </div>
      </div>
    </div>

</body>
